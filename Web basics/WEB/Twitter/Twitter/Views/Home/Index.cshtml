
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to SoftUni Tweeters</h1>
    <p>Create new tweet <a href="/Tweets/Creates">here</a>.</p>
</div>

@foreach (var tweet in Model)
{
    <div>
        <strong>@tweet.Username:</strong>
        @tweet.Text
        <em>(@tweet.CreateOn)</em>
    </div>
}